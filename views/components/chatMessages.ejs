<section id="messages">
    <% if (data && data.messages.length > 0) { %>

        <% for (let i = 0; i < data.messages.length; i++) { %>

            <% if (data.messages[i].media == 'gif') { %>
                <div class="message <%= data.messages[i].sender === data.clientid ? 'messageSend' : 'messageRecieve' %> ">
                    <img src="<%= data.messages[i].content %>" id="gifImg" />
                </div>

            <% } else { %>
                <div class="message <%= data.messages[i].sender === data.clientid ? 'messageSend' : 'messageRecieve' %> ">
                    <p>
                        <%= data.messages[i].content %>
                    </p>
                </div>
            <% } %>

        <% } %>
        
    <% } else { %>

        <div class="message messageRecieve">
            <p>No messages found, start chatting and matching ğŸ¦€</p>
        </div>

        <div class="message messageSend">
            <p>No messages found, start chatting and matching ğŸ¦€</p>
        </div>
    
    <% } %>
</section>